{
  "name": "aoe2-rms-parser",
  "version": "2.0.0",
  "description": "Modern parser and linter for Age of Empires 2 Random Map Scripts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run gen-grammar && npm run gen-lib && tsc --project src && esbuild src/index.ts --bundle --outfile=dist/index.js --platform=node --format=cjs --external:nearley --external:moo --external:lodash --minify --sourcemap --tree-shaking=true && npm run bundle-types",
    "bundle-types": "tsc --project src --declaration --emitDeclarationOnly --outDir dist",
    "build:watch": "tsc --project src --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts test/**/*.ts",
    "clean": "rimraf dist",
    "gen-grammar": "nearleyc src/parse/grammar.ne --out src/parse/grammar.ts",
    "gen-test-samples": "ts-node --project test/tsconfig.json ./test/samples/generated/generateSamples",
    "gen-lib": "ts-node --project src/tsconfig.json ./src/lib/generate",
    "docker:build": "docker build -t aoe2-rms-parser .",
    "docker:test": "docker-compose run test",
    "docker:dev": "docker-compose run dev",
    "health-check": "node scripts/health-check.js",
    "prepublishOnly": "npm run clean && npm run build && npm run test && npm run health-check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/austinhardy318/aoe2-rms-parser.git"
  },
  "keywords": [
    "age-of-empires-2",
    "aoe2",
    "rms",
    "random-map-script",
    "parser",
    "linter",
    "ast"
  ],
  "author": "Mangudai contributors (original), Austin (modernized)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/austinhardy318/aoe2-rms-parser/issues"
  },
  "homepage": "https://github.com/austinhardy318/aoe2-rms-parser#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild": "^0.20.0",
    "eslint": "^9.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@types/lodash": "^4.14.110",
    "@types/moo": "^0.5.0",
    "@types/nearley": "^2.11.0",
    "lodash": "^4.17.21",
    "moo": "^0.5.0",
    "nearley": "^2.20.0"
  }
}
